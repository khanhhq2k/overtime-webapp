<tr>
  <td>
    <%= post.id %>
  </td>
  <td>
    <%= post.date %>
  </td>
  <td>
    <%= post.user.full_name %>
  </td>
  <td>
    <%= link_to truncate(post.rationale), post_path(post) %>
  </td>
  <td>
    <%= post.overtime_request %>
  </td>
  <td>
    <%= status_label post.status %>
  </td>
  <td>
    <%= link_to "", edit_post_path(post), id: "edit_post_#{post.id}", class: 'glyphicon glyphicon-pencil index-icons' if policy(post).update? %>
  </td>
  <td>
    <%= link_to "", post_path(post), method: :delete, data: {confirm: "Entry will be deleted, are you sure?"}, id: "delete_post_#{post.id}", class: 'glyphicon glyphicon-trash index-icons' %>
  </td>
</tr>
